generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
}

model User {
  id       Int    @id @default(autoincrement())
  name     String
  email    String @unique
  password String
  zaps     Zap[]
}

model Zap {
  id        String   @id @default(dbgenerated("gen_random_uuid()")) @db.Uuid
  userId    Int
  user      User    @relation(fields: [userId] , references: [id])
  trigger  Trigger?
  actions  Action[]
  zapRuns  ZapRun[]
}

model Trigger {
  id                   String   @id @default(dbgenerated("gen_random_uuid()")) @db.Uuid
  zapId                String   @unique @db.Uuid
  availableTriggerId   String   @db.Uuid
  metadata             Json?    

  zap   Zap              @relation(fields: [zapId], references: [id])
  type  AvailableTrigger @relation(fields: [availableTriggerId], references: [id])
}

model Action {
  id                String           @id @default(dbgenerated("gen_random_uuid()")) @db.Uuid
  name              String
  metadata          Json?           

  zapId             String           @db.Uuid
  availableActionId String?          @db.Uuid
  sortingOrder      Int              @default(0)

  zap               Zap              @relation(fields: [zapId], references: [id])
  availableAction   AvailableAction? @relation(fields: [availableActionId], references: [id])
}


model AvailableTrigger {
  id       String    @id @default(dbgenerated("gen_random_uuid()")) @db.Uuid
  name     String
  triggers Trigger[]
}



model AvailableAction {
  id      String   @id @default(dbgenerated("gen_random_uuid()")) @db.Uuid
  name    String
  actions Action[]
}

model ZapRun {
  id            String         @id @default(dbgenerated("gen_random_uuid()")) @db.Uuid
  zapId         String         @db.Uuid
  metadata      Json

  zap           Zap            @relation(fields: [zapId], references: [id])
  zapRunOutBox  ZapRunOutBox?
}

model ZapRunOutBox {
  id        String @id @default(dbgenerated("gen_random_uuid()")) @db.Uuid
  zapRunId  String @unique @db.Uuid

  zapRun    ZapRun @relation(fields: [zapRunId], references: [id])
}